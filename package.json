{
  "name": "react-localstorage-tools",
  "version": "1.0.0",
  "description": "Finally a decent way to integrate localStorage with modern React",
  "sideEffects": false,
  "scripts": {
    "analyze": "ANALYZE=true webpack --config ./dev/webpack.config.js --mode production",
    "build-storybook": "storybook build",
    "build:publish": "npm run build && npm publish ./dist",
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json && tsc-alias && node ./bin/finalize && cp package.json README.md dist",
    "lint": "eslint ./src",
    "postinstall": "if [ -d './node_modules/husky' ]; then husky install; fi",
    "precommit": "npm run types:check && npm run prettier:fix && npm run lint",
    "prettier:check": "prettier --check 'src/**/*.ts*' 'dev/**/*.ts*'",
    "prettier:fix": "prettier --write 'src/**/*.ts*' 'dev/**/*.ts*'",
    "start": "webpack serve --config ./dev/webpack.config.js --mode development",
    "storybook": "storybook dev -p 6006",
    "test:watch": "jest --watch",
    "test": "jest",
    "types:check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgnewman/react-localstorage-tools.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgnewman/react-localstorage-tools/issues"
  },
  "homepage": "https://github.com/jgnewman/react-localstorage-tools#readme",
  "peerDependencies": {
    "react": "^18.x",
    "react-dom": "^18.x"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "babel-loader": "^9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^2.8.8",
    "prettier-config-standard": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.1.3",
    "webpack": "^5.85.1",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.3",
    "webpack-dev-server": "^4.15.0"
  }
}
